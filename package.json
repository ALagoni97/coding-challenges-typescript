{
    "name": "blackjack",
    "private": true,
    "scripts": {
        "build": "tsc",
        "test": "vitest"
    },
    "devDependencies": {
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vitest": "^1.1.3"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120,
        "overrides": [
            {
                "files": "*.{yml,yaml}",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    }
}
